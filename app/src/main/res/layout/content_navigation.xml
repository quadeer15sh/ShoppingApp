<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nair9.shoppingapp.NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">

    <Button
        android:id="@+id/btnRecommendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnBarcode"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:text="Recommendation"/>

    <Button
        android:id="@+id/btnBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="113dp"
        android:onClick="Barcode"
        android:text="Barcode"/>

    <Button
        android:id="@+id/btnPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnBarcode"
        android:layout_alignRight="@+id/btnBarcode"
        android:layout_below="@+id/btnBarcode"
        android:layout_marginTop="73dp"
        android:text="Payment"/>

    <Button
        android:id="@+id/btnReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPayment"
        android:layout_alignBottom="@+id/btnPayment"
        android:layout_alignLeft="@+id/btnRecommendation"
        android:layout_alignStart="@+id/btnRecommendation"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="Feedback"/>

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnBarcode"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnBarcode"
        android:layout_marginTop="31dp"
        android:text=""/>
</RelativeLayout>
